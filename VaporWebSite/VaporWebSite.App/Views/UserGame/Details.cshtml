@model VaporWebSite.App.Models.FullUserGame

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.GameId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.GameId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.DeveloperId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.DeveloperId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Image)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Image)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Trailer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Trailer)
        </dd>
    </dl>
    <h4>Dlc</h4>
    <hr />
    <dl class="row">
        @for (int i = 0; i < Model.SelectDlcs.Count; i++)
        {
        <dt class="col-sm-5">
            @Html.DisplayFor(model => model.SelectDlcs[i].Dlc.Name)
        </dt>

            <dd class="col-sm-10">
                @("Price: $") @Html.DisplayFor(model => model.SelectDlcs[i].Dlc.Price) @("       ")
                @if (Model.Selected && !Model.SelectDlcs[i].Selected)
                {
                @Html.ActionLink("Purchase", "Purchase", "UserDlc", new { id = Model.SelectDlcs[i].Dlc.Dlcid })
                }
                @Html.Raw("\n")
            </dd >
         }
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
