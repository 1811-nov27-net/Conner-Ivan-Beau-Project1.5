@model VaporWebSite.App.Models.FullUserGame

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>UserGame</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserGame.PurchaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserGame.PurchaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserGame.Review)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserGame.Review)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserGame.Score)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserGame.Score)
        </dd>
    </dl>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.GameId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.GameId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Developer.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Developer.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Price)

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Image)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Image)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Name)
        </dd>
    </dl>
    <h4>Tags</h4>
    <hr />
    <dl class="row">
        @foreach (var item in Model.Game.Tags)
        {
            <dt class="col-sm-2">
                @Html.DisplayFor(modelitem => item.TagId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelitem => item.Name)
            </dd>
        }
    </dl>
    <h4>Dlc</h4>
    <hr />
    <dl class="row">
        @foreach (var item in Model.Dlcs)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelitem => item.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelitem => item.Name)
            </dd>
        }
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { username = Model.UserGame.User.UserName, id = Model.Game.GameId }) |
    <a asp-action="Index">Back to List</a>
</div>
